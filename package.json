{
  "name": "mf.messenger.praktikum.yandex",
  "version": "0.0.1",
  "description": "Проектная работа Яндекс.Практикум Мидл Фронтенд Разработчик",
  "main": "server.js",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^26.0.7",
    "autoprefixer": "^9.8.5",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "babel-preset-env": "^1.7.0",
    "css-loader": "^3.6.0",
    "express": "^4.17.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "handlebars": "^4.7.6",
    "handlebars-jest": "^0.5.0",
    "handlebars-loader": "^1.7.1",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.1.0",
    "jest-transform-css": "^2.0.0",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.4",
    "postcss-loader": "^3.0.0",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "scripts": {
    "cp": "tsc && ncp src build --filter='.*(?<!\\.ts)$'",
    "build:prod": "npm run cp && webpack --mode=production",
    "build:dev": "npm run cp && webpack --mode=development && node --inspect ./build/server.js",
    "start": "nodemon --watch src --ext 'ts' --exec npm run build:dev",
    "test": "jest"
  },
  "jest": {
    "globals": {
      "handlebars-jest": {
        "helperDirs": [
          "<rootDir>/src/helpers"
        ],
        "partialDirs": [
          "<rootDir>/src/partials"
        ],
        "partialExtensions": [
          ".hbs",
          ".html"
        ]
      }
    },
    "preset": "ts-jest",
    "transform": {
      "^.+\\.js?$": "babel-jest",
      "^.+\\.hbs$": "<rootDir>/node_modules/handlebars-jest",
      ".+\\.(css|styl|less|sass|scss)$": "jest-transform-css"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aleksandr-yakovlev/mf.messenger.praktikum.yandex.git"
  },
  "author": "aleksandr.yakovlev@bk.ru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aleksandr-yakovlev/mf.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/aleksandr-yakovlev/mf.messenger.praktikum.yandex#readme"
}
