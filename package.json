{
  "name": "mf.messenger.praktikum.yandex",
  "version": "0.0.1",
  "description": "Проектная работа Яндекс.Практикум Мидл Фронтенд Разработчик",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^26.0.7",
    "autoprefixer": "^9.8.5",
    "babel-jest": "^26.1.0",
    "babel-preset-env": "^1.7.0",
    "css-loader": "^3.6.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "handlebars": "^4.7.6",
    "handlebars-jest": "^0.5.0",
    "handlebars-loader": "^1.7.1",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.1.0",
    "jest-handlebars": "^1.0.1",
    "jest-transform-css": "^2.0.0",
    "postcss-loader": "^3.0.0",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.1.3",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "scripts": {
    "build:prod": "webpack --mode=production",
    "start": "webpack-dev-server",
    "test": "jest",
    "test:clear": "jest --clearCache"
  },
  "jest": {
    "globals": {
      "handlebars-jest": {
        "helperDirs": [
          "<rootDir>/src/helpers"
        ],
        "partialDirs": [
          "<rootDir>/src/partials"
        ],
        "partialExtensions": [
          ".hbs",
          ".html"
        ]
      }
    },
    "preset": "ts-jest",
    "modulePaths": [
      "./src/utils",
      "./node_modules",
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "hbs"
    ],
    "transform": {
      "^.+\\.js?$": "babel-jest",
      "^.+\\.ts?$": "ts-jest",
      "^.+\\.hbs$": "<rootDir>/src/utils/pre.ts",
      ".+\\.(css|styl|less|sass|scss)$": "jest-transform-css"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aleksandr-yakovlev/mf.messenger.praktikum.yandex.git"
  },
  "author": "aleksandr.yakovlev@bk.ru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aleksandr-yakovlev/mf.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/aleksandr-yakovlev/mf.messenger.praktikum.yandex#readme"
}
